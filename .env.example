# =============================================================================
# INCIDENT MANAGEMENT TOOL - ENVIRONMENT CONFIGURATION
# =============================================================================

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=3000
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# =============================================================================
# AI & MACHINE LEARNING
# =============================================================================
# OpenAI API for advanced AI features
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Custom AI settings
AI_CONFIDENCE_THRESHOLD=0.8
AI_MAX_SUGGESTIONS=5

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL (recommended for production)
DATABASE_URL=postgresql://username:password@localhost:5432/incident_management
DB_HOST=localhost
DB_PORT=5432
DB_NAME=incident_management
DB_USER=incident_user
DB_PASSWORD=secure_password_123

# Redis for caching and sessions
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Secret for session management
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_complex
JWT_EXPIRES_IN=7d

# Azure AD Authentication (optional)
AZURE_AD_CLIENT_ID=your_azure_ad_client_id
AZURE_AD_CLIENT_SECRET=your_azure_ad_client_secret
AZURE_AD_TENANT_ID=your_azure_ad_tenant_id

# Session secret
SESSION_SECRET=your_session_secret_key_here

# =============================================================================
# EMAIL & NOTIFICATIONS
# =============================================================================
# SMTP Configuration for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# SendGrid (alternative email service)
SENDGRID_API_KEY=your_sendgrid_api_key

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# Microsoft Teams Webhook
TEAMS_WEBHOOK_URL=https://your-org.webhook.office.com/webhookb2/your-webhook-url

# =============================================================================
# AZURE SERVICES
# =============================================================================
# Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key;IngestionEndpoint=https://region.in.applicationinsights.azure.com/
APPINSIGHTS_INSTRUMENTATIONKEY=your_app_insights_key

# Azure Storage for file uploads
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your_storage;AccountKey=your_key;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER_NAME=incident-attachments

# Azure Key Vault
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/
AZURE_CLIENT_ID=your_service_principal_client_id
AZURE_CLIENT_SECRET=your_service_principal_secret
AZURE_TENANT_ID=your_azure_tenant_id

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Jira Integration (optional)
JIRA_HOST=your-company.atlassian.net
JIRA_USERNAME=your_jira_email
JIRA_API_TOKEN=your_jira_api_token

# ServiceNow Integration (optional)
SERVICENOW_INSTANCE=your_instance.service-now.com
SERVICENOW_USERNAME=your_servicenow_user
SERVICENOW_PASSWORD=your_servicenow_password

# Webhooks for external systems
EXTERNAL_WEBHOOK_SECRET=your_webhook_verification_secret

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Log levels: error, warn, info, debug
LOG_LEVEL=info
LOG_FORMAT=json

# Sentry for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# PERFORMANCE & SCALING
# =============================================================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Caching settings
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# File upload limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,png,jpg,jpeg,gif

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
ENABLE_AI_SUGGESTIONS=true
ENABLE_REAL_TIME_CHAT=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SLACK_INTEGRATION=true
ENABLE_AUDIT_LOGGING=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_FILE_UPLOADS=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development only - remove in production
DEBUG_MODE=true
MOCK_AI_RESPONSES=false
DISABLE_AUTH_IN_DEV=false

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# Security settings for production
SECURE_COOKIES=true
HTTPS_ONLY=true
TRUST_PROXY=true

# Domain configuration
ALLOWED_ORIGINS=https://your-domain.com,https://your-staging-domain.com
CORS_CREDENTIALS=true

# =============================================================================
# BACKUP & DISASTER RECOVERY
# =============================================================================
# Database backup settings
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_URL=your_backup_storage_connection

# =============================================================================
# COMPLIANCE & AUDIT
# =============================================================================
# Compliance settings
ENABLE_GDPR_MODE=true
DATA_RETENTION_DAYS=2555
AUDIT_LOG_RETENTION_DAYS=2555

# =============================================================================
# INSTRUCTIONS
# =============================================================================
# 1. Copy this file to .env.local for local development
# 2. Fill in the actual values for your environment
# 3. Never commit actual secrets to version control
# 4. Use Azure Key Vault or similar for production secrets
# 5. Set environment variables in Azure App Service Configuration
#
# For Azure deployment, set these in:
# Azure Portal → App Service → Configuration → Application Settings
#
# For Docker deployment, use:
# docker run -e NODE_ENV=production -e DATABASE_URL=... your-image
#
# For local development:
# cp .env.example .env.local
# # Edit .env.local with your values
# npm run dev
